/* pages/couponPay/couponPay.wxss */
page{
  background: #fff;
}
.content{
  width:92%;
  margin:0 auto;
  padding:30rpx 0;
}
.coupon-wrp{
  border-radius: 10rpx;
  box-shadow: 15rpx 15rpx 20rpx #ddd;
  margin-bottom: 50rpx;
}
.title{
  font-size: 36rpx;
  color:#666;
}
.desc{
  padding:30rpx 0;
  line-height: 180%;
  color:#999;
  font-size: 30rpx;
}

.fixed-bottom{
  width: 100%;
  height:100rpx;
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  background: #fff;
  border-top:1px solid #ddd;
  display: flex;
  z-index: 1000;
}
.price{
  flex: 1;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
}
.fixed-btn {
  flex: 1;
}
.fixed-btn button{
  margin:0;
  border-radius: 0;
  height:100rpx;
  line-height: 100rpx;
  color: #fff;
}