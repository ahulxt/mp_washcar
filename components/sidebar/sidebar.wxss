/*mask*/  
.drawer-mask {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}
/* 侧边栏 */
.sidebar{
  position: fixed;
  top: 0;
  bottom:0;
  z-index: 10000;
  width: 70%;
  background-color: #fff;
  color:#333;
  font-size:28rpx;
  -webkit-transition: all 0.4s;
  transition:all 0.4s;
}
.sidebar.active{
  -webkit-transform: translateX(100%);
  transform: translateX(100%);
}
.sidebar.active-right{
  -webkit-transform: translateX(-100%);
  transform: translateX(-100%);
}