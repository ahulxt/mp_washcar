.banner{
  width: 100%;
  height:250rpx;
  background: #F4F4F4;
  position: relative;
}
.banner-img{
  width: 100%;
  height:100%;
}
.user-img{
  width: 60rpx;
  background: #fff;
  height:88rpx;
  text-align: right;
  position: absolute;
  left:0;
  top:50%;
  margin-top:-44rpx;
}
.radius-box{
  box-sizing: border-box;
  width: 88rpx;
  height:88rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top:0rpx;
  right:-40rpx;
}
