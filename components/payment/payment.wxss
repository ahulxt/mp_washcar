.red-text{
  color:#FF0000;
}
/*mask*/  
.drawer-mask {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 100000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}
.bottom-slider{
  position: fixed;
  left: 0;
  top:100%;
  width: 100%;
  background: #fff;
  z-index: 1000000;
  color: #A6A6A6;
  font-size:30rpx;
  -webkit-transition: all 0.4s;
  transition:all 0.4s;
}
.bottom-slider.active{
  -webkit-transform: translateY(-566rpx);
  transform: translateY(-566rpx);
}
.slider-item{
  display: flex;
  align-items: center;
  height:120rpx;
  border-bottom:1px solid #ddd;
  padding:0 30rpx;
}
.bottom-slider .title{
  height:100rpx;
  line-height: 80rpx;
  border-bottom:1px solid #ddd;
  color:#666;
}

.slider-item .name{
  display: flex;
  flex: 1;
  align-items: center;
}
.slider-item .radio{
  width:50rpx;
}
.slider-item .icon{
  width: 60rpx;
  height:60rpx;
  margin-right:40rpx;
}
.slider-item .name .icon,.slider-item .name .text{
  vertical-align: middle;
}
.pay{
  margin:0;
  border-radius: 0;
  height:100rpx;
  line-height: 100rpx;
  color: #fff;
}
.right-text{
  justify-content:flex-end;
  border-bottom: none;
}