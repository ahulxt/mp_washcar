.lettet-tip{
  position: absolute;
  top:-30rpx;
  left:-150rpx;
  font-size:50rpx;
  width:100rpx;
  height:100rpx;
  line-height: 100rpx;
  background: #ccc;
  text-align: center;
  border-radius: 50%;
  color:#fff;
}
.lettet-tip::after{
  content: ' ';
  width: 40rpx;
  height:40rpx;
  background: inherit;
  right: -10rpx; 
  position: absolute;
  transform: rotate(45deg); 
  top:50%; 
  margin-top:-20rpx;
}    
.letterHighlight{
  background:#3572ce;
  color: #fff;
  border-radius: 50%;
}  
.scoll-car-series{
  height: 100%;
}
.series-row{
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  height: 100rpx;
  color: #2a2a2a;
  font-size: 30rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #eee;
  padding-left: 30rpx;
}


