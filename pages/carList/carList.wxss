/* pages/car/carList.wxss */
.content{
  width: 95%;
  margin:0 auto;
  padding-bottom:30rpx;
}
.car-list{
  background: #fff;
  margin:20rpx 0;
  border-radius: 10rpx;
  color: #666666;
  font-size:28rpx;
  box-shadow: 0 0 2px #ccc;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  overflow: hidden
}
.addCar{
  background: #fff;
  margin:20rpx 0 50rpx;
  border-radius: 10rpx;
  color: #666666;
  font-size:28rpx;
  box-shadow: 0 0 2px #ccc;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
}
.car-item{
  width: 100%;
  height: 170rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(140rpx);
  transform: translateX(140rpx);
  margin-left:-140rpx;
}
.car-icon{
  width: 71rpx;
  height: 71rpx;
  margin:0 70rpx;
}
.car-brand{
  flex: 1;
}
.car-brand text{
  display: inline-block;
  margin:10rpx 20rpx;
}
.arrow-left{
  margin-right:30rpx;
}
.arrow-left::before{
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: inherit;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
  position: absolute;
  top:10rpx;
  left:10rpx;
}
.del{
  background-color: #FF4C4C;
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(140rpx);
  transform: translateX(140rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .car-item,.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}