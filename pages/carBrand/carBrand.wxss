/*热门品牌*/
.hot-view{
    background: #fff;
    /*margin-top:20rpx;*/
    border-bottom:solid 1rpx #dedede;
}
.hot-view  > text{
    display: block;
    font-size:32rpx;
    height:80rpx;
    line-height: 80rpx;
    border-bottom:solid 1rpx #dedede;
    padding-left:18rpx;
}
.hot-item{
    /*默认不换行*/
    /*padding:20rpx;*/
    padding: 0 63rpx 49rpx 63rpx;
    text-align: center;
    font-size:24rpx;
    color:#444;
}
.hot-row{
    display:flex;
    justify-content: space-between;
    align-items: center;
}
.hot-row > view{
    padding-top:53rpx;
}
.hot-name{
    padding-top:20rpx;
}

/*品牌列表*/
.brand-scroll{
    /*height:667px; */
    /*??*/
}
.brand-item view{
    display:block;
}
.brand-item > text{ 
    display: block;
    color:#777;
    background:#eee;
    font-size:30rpx;
    height: 61rpx;
    line-height:61rpx;
    padding-left:32rpx;
}
.brand-item > view{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height:100rpx;
    font-size:30rpx;
    line-height:100rpx;
    padding-left:32rpx;
    background: #fff;
}
.brand-item view:not(:last-child){
    border-bottom:solid 1rpx #eee;
}
.brand-name{
    padding-left:30rpx;
}
.letter-item{
    position:fixed;
    width:20px;
    top:50%;
    right:5rpx;
    /*border:solid 1px #ccc;
    border-radius:7px;*/
    transform: translate(0,-50%);
}
.letter-hover{
    position:fixed;
    width:20px;
    top:50%;
    right:0;
    transform: translate(0,-50%);
    border-radius:7px;
    background:rgba(0,0,0,.2);
}
.letter-li{
    display:flex;
    align-items: center;
    justify-content: center;
    color:#3572ce;
    background:transparent;
    font-size:26rpx;
    height:40rpx;
    position: relative;
}
.letter-li:target{
    color:red;
}
