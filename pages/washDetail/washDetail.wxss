/* pages/washDetail/washDetail.wxss */

.banner{
  width: 100%;
  height:400rpx;
  background: #F4F4F4;
  position: relative;
}
.banner-img{
  width: 100%;
  height:100%;
}
.box-wrp{
  margin:0 auto;
  padding:20rpx 4%;
  background: #fff;
  margin-bottom: 30rpx;
}
.title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color:#333;
  margin:10rpx 0;
}
.title .sales{
  color:#999;
  font-size: 24rpx;
}
.price{
  border-bottom: 1px solid #ddd;
  padding:10rpx 0 20rpx;
}
.ensure{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 22rpx;
  color:#999;
  margin:26rpx 0;
}
.ensure>view:first-child{
  margin-right:30rpx;
}
.ensure .list-icon{
  width: 22rpx;
  height:22rpx;
  margin-right:6rpx;
  vertical-align: middle;
}
.ensure text{
  vertical-align:middle;
}
.detail-service{
  font-size:26rpx;
  color:#666;
  line-height: 180%;
}
.others-link{
  display: flex;
  justify-content:flex-start;
  margin:20rpx 0;
}
.link-item{
  margin-right:40rpx;
}
.link-item image{
  width: 200rpx;
  height:200rpx;
}