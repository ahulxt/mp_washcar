/* pages/myCoupon/myCoupon.wxss */
page{
  background: #fff;
}
.coupon-wrp{
  padding:30rpx 26rpx;
}
.coupon-list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden; 
  color:#333;
  padding:0 30rpx 30rpx 30rpx;
  margin-bottom:30rpx;
}
.left-item{
  flex:1;
}
.icon{
  width: 140rpx;
  height:140rpx;
}
.icon image{
  width: 100%;
  height:100%;
}
.coupon-list.gray{
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  position: relative;
}
.coupon-list.gray .icon{
  position: absolute;
  top:50%;
  right:30rpx;
  margin-top:-70rpx;
}
.coupon-list .label{
  width: 200rpx;
  height:40rpx;
  line-height: 40rpx;
  font-size:26rpx;
  color:#fff;
  background: #FF0303;
  text-align: center;
  transform: rotate(-45deg);
  position: absolute;
  top:26rpx;  
  left:-54rpx; 
  
}
.coupon-title{
  font-size:38rpx;
  margin-top:50rpx;
}
.coupon-item{
  font-size: 40rpx;
  padding:20rpx 0;
  color:#000;
}
.ori{
  font-size:30rpx;
  text-decoration: line-through;
  color:#666;
  margin-left:10rpx;
}
.coupon-desc{
  font-size:22rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  line-height: 180%;
}
.nodata{
  font-size: 28rpx;
  color: #999;
  text-align: center;
}